#!/bin/bash

config_file='/etc/<%= @name %>_backup.conf'
timestamp=$(date +'%Y-%m-%d-%H-%M')

if [ -e ${config_file} ]; then
  source ${config_file}
else
  echo "Error: ${config_file} missing"
  exit 1
fi

database_dump_output="${backup_dir}/<%= @name %>-database-backup-${timestamp}.sql"

function setup() {
  if [ ! -d "${backup_dir}" ]; then
    echo "Creating ${backup_dir}"
    mkdir -p ${backup_dir}
  fi
}

function backup_database() {
  echo "Backing up <%= @name %> database"
  /usr/bin/pg_dump -U "${db_user}" "${db_name}" -h "${db_host}" -f "${database_dump_output}"
  echo "Created ${database_dump_output}"
}

function main() {
  echo  "Backing up <%= @name %>"
  setup
  backup_database
}

main
